<div class="booyah-box">
    <div class="row">
        <div class="col-4">

<h1>User Dashboard</h1>

<%= image_tag 'clip_it_black_.png' %>
   
         </div>

    <div class="col-8">

          <h2><%= @user.email %></h2>
          <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
          <h4><%= @user.comments.count %>  total comments</h4>
          <h4><%= @user.comments.where(rating: '5_stars').count %> total reviews</h4>
          <h4><%= @user.comments.where(rating: '4_stars').count %> total reviews</h4>
          <h4><%= @user.comments.where(rating: '3_stars').count %> total reviews</h4>
          <h4><%= @user.comments.where(rating: '2_stars').count %> total reviews</h4>
          <h4><%= @user.comments.where(rating: '1_stars').count %> total reviews</h4>

    </div>
  </div>
    <div class="clear"></div>
</div>